<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="fill_horizontal|fill_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/display"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:gravity="right"
        android:text="@string/zero"
        android:textSize="100sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:gravity="center_horizontal|center_vertical|fill_vertical" >

        <Button
            android:id="@+id/mempush"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/mempush"
            android:textSize="40sp" />

        <Button
            android:id="@+id/mempop"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/mempop"
            android:textSize="40sp" />

        <Button
            android:id="@+id/memclear"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/memclear"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="242dp"
        android:gravity="center_horizontal|center_vertical|fill_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/reset"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/reset"
            android:textSize="100sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.40" >
    </FrameLayout>

</LinearLayout>